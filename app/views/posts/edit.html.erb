
<%= form_with(model: @post, local: true, html: {class: 'form-signin'}) do |form| %>
<h3>Edit your post</h3>

  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@post.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
  <%= form.text_area :message, id: 'message', class: 'form-control' %>
</p>

<p>
  <%= form.submit "Update Post", class: 'btn btn-primary btn-block' %>
</p>
<%= link_to 'Back', request.referer, class: "btn btn-primary btn-sm" %>

<% end %>
